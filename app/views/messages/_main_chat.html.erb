<div class="main-header">
   <div class="group">開いてるチャット名</div>
   <div class="deleteroom-btn">
   <a href="#">チャットを終了する</a>
   </div>
</div>
<div class="messages">
   <div class="message">
      <div class="user-date">
         <div class="name">ユーザー名</div>
         <div class="time">2020/01/01(Mon) 00:00:00</div>
      </div>
      <div class="text">おは</div>
   </div>

   <div class="message">
      <div class="user-date">
         <div class="name">ゆーざーめい</div>
         <div class="time">2020/01/01(Mon) 00:00:00</div>
      </div>
      <div class="text">ども</div>
   </div>
</div>

<%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
   <div class="form-input">
      <%= f.text_field :content, class: 'text-form', placeholder: 'type a message' %>
      <label class="form-image">
         <span class="image-file">画像</span>
         <%= f.file_field :image, class: 'hidden' %>
      </label>
   </div>
   <%= f.submit '送信', class: 'send' %>
<% end %>